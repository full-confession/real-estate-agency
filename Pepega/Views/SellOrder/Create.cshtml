@using System.Globalization
@model Pepega.Controllers.SellOrderCreateModel
@{
    ViewData["Title"] = "Добавление клиента";
}

<div class="row justify-content-md-center">
    <div class="col-6">
        <form>
            <div class="card p-3 mb-3">
                <h5>Добавление нового договора о продаже</h5>
                <hr />
                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label asp-for="PropertyId" class="input-group-text" style="width: 150px"></label>
                    </div>
                    <input asp-for="PropertyId" asp-placeholder-for="PropertyId" class="form-control" />
                    <div class="invalid-feedback d-block">
                        <span asp-validation-for="PropertyId"></span>
                    </div>
                </div>
                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label asp-for="Price" class="input-group-text" style="width: 150px"></label>
                    </div>
                    <input asp-for="Price" asp-placeholder-for="Price" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">тыс. руб.</span>
                    </div>
                    <div class="invalid-feedback d-block">
                        <span asp-validation-for="Price"></span>
                    </div>
                </div>

                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label asp-for="AgencyCharge" class="input-group-text" style="width: 150px"></label>
                    </div>
                    <input asp-for="AgencyCharge" asp-placeholder-for="AgencyCharge" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">тыс. руб.</span>
                    </div>
                    <div class="invalid-feedback d-block">
                        <span asp-validation-for="AgencyCharge"></span>
                    </div>
                </div>
                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label asp-for="AgencyPercent" class="input-group-text" style="width: 150px"></label>
                    </div>
                    <input asp-for="AgencyPercent" asp-placeholder-for="AgencyPercent" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="invalid-feedback d-block">
                        <span asp-validation-for="AgencyPercent"></span>
                    </div>
                </div>

                <button asp-action="Create" formmethod="post" class="btn btn-info">Добавить</button>
            </div>
        </form>
    </div>
</div>